<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#FF4BE7DF"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/flea_userphoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/t7"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/flea_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试用户名" />

                <ImageView
                    android:id="@+id/flea_detais_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/woman" />
            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35分钟之前发布" />
        </LinearLayout>

        <TextView
            android:id="@+id/flea_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="560元"
            android:textColor="#FFDF2121" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/flea_rv_imgs"
        android:layout_width="wrap_content"
        android:layout_height="188dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#FF21DF47">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="中国科学技术大学"
            android:textColor="#FFA8AFB4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="浏览525次" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12人讲价" />
    </LinearLayout>
</LinearLayout>