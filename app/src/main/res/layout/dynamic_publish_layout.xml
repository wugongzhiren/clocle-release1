<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<Button
    android:id="@+id/dynamic_publish"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="发表"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/dynamic_edit"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:hint="分享我的新鲜事"
                    android:textColorHint="#dedede"/>

                <GridView
                    android:id="@+id/gv_photo_choose"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:horizontalSpacing="3dp"
                    android:numColumns="3"
                    android:verticalSpacing="3dp">

                </GridView>


            </LinearLayout>
       <!--</ScrollView>-->

        <RelativeLayout
            android:id="@+id/rl_choose_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/edittext">

            <TextView
                android:id="@+id/imgdynamic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="添加图片"
                android:layout_centerInParent="true"
                android:drawableBottom="@mipmap/addphoto"

                />


        </RelativeLayout>
    </FrameLayout>
</LinearLayout>