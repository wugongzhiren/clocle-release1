<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:id="@+id/update_self_line"
    android:orientation="vertical">
<include layout="@layout/toolar"/>
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/updateselfinfo_photo"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/updateselfinfo_photo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击修改头像"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/nicknameLine"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="昵称"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="艾苏北郡的小铁匠"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/signatureLine"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="签名"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="美美的都有签名"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>