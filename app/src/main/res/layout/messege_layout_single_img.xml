<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:elevation="1dp"
    android:transformPivotX="2dp"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/help_userphoto1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            fresco:roundAsCircle="true"
            />

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/namedongtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无功至人"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/help_sex"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/namedongtai"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/man"/>

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namedongtai"
                android:layout_marginTop="3dp"


                android:text="28分钟前"
                android:textColor="#A39E9E"
                android:textSize="8sp" />
            <TextView
                android:layout_toRightOf="@+id/timetext"
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namedongtai"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"


                android:text="安徽中医药大学"
                android:textColor="#A39E9E"
                android:textSize="8sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/down" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1px"

        android:background="#686161" />



    <TextView

        android:id="@+id/contextdongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:text="111111111111111111111111111111111111111111111111111111" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:visibility="visible"
        fresco:actualImageScaleType="centerCrop"
        android:id="@+id/only_one_image"
        android:maxHeight="1000dp"
        android:maxWidth="1000dp"
        android:layout_width="match_parent"
        android:layout_height="220dp" />


    <LinearLayout
        android:id="@+id/pinglun"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/help_comment"
            android:drawableLeft="@mipmap/information"

            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评论" />




        <TextView
            android:id="@+id/help_order"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:drawableLeft="@mipmap/shape_shopping"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="抢单"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
